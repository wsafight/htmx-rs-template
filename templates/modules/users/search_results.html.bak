{% if users.is_empty() %}
<div class="text-center py-5">
    <i class="bi bi-search display-1 text-muted"></i>
    <h4 class="mt-3 text-muted">未找到匹配的用户</h4>
    <p class="text-muted">搜索关键词: "{{ query }}"</p>
</div>
{% else %}
<!-- 分页信息 -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <div class="text-muted">
        显示 {{ start_item }} - {{ end_item }} / 共 {{ pagination.total }} 条
    </div>
    <div class="text-muted">
        第 {{ pagination.current_page }} / {{ pagination.total_pages }} 页
    </div>
</div>

<div class="row g-4">
    {% for user in users %}
    <div class="col-md-6 col-lg-4">
        <div
            class="card h-100 shadow-sm hover-shadow animate__animated animate__fadeIn"
        >
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div
                            class="avatar bg-primary text-white rounded-circle d-flex align-items-center justify-content-center"
                            style="
                                width: 60px;
                                height: 60px;
                                font-size: 24px;
                                font-weight: bold;
                            "
                        >
                            {{ user.name.chars().next().unwrap() }}
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h5 class="card-title mb-1">{{ user.name }}</h5>
                        <p class="card-text text-muted small mb-0">
                            <i class="bi bi-envelope me-1"></i>{{ user.email }}
                        </p>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-transparent border-top-0">
                <div class="d-flex gap-2">
                    <button
                        class="btn btn-sm btn-outline-primary flex-fill"
                        hx-get="/block/users/{{ user.id }}/detail"
                        hx-target="#modal-container"
                        hx-swap="innerHTML"
                    >
                        <i class="bi bi-person-lines-fill"></i> 详情
                    </button>
                    <button class="btn btn-sm btn-outline-secondary flex-fill">
                        <i class="bi bi-chat-dots"></i> 消息
                    </button>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
</div>

<!-- 分页控件 -->
<nav aria-label="用户列表分页" class="mt-4">
    <ul class="pagination justify-content-center">
            <!-- 上一页 -->
            <li
                class="page-item {% if !pagination.has_prev %}disabled{% endif %}"
            >
                <button
                    class="page-link"
                    {%
                    if
                    pagination.has_prev
                    %}
                    hx-get="/block/users/search?q={{ query }}&page={{ pagination.current_page - 1 }}&per_page={{ pagination.per_page }}"
                    hx-target="#search-results"
                    hx-indicator="#loading"
                    {%
                    else
                    %}
                    disabled
                    {%
                    endif
                    %}
                >
                    <i class="bi bi-chevron-left"></i> 上一页
                </button>
            </li>

            <!-- 首页 -->
            {% if pagination.current_page > 2 %}
            <li class="page-item">
                <button
                    class="page-link"
                    hx-get="/block/users/search?q={{ query }}&page=1&per_page={{ pagination.per_page }}"
                    hx-target="#search-results"
                    hx-indicator="#loading"
                >
                    1
                </button>
            </li>
            {% if pagination.current_page > 3 %}
            <li class="page-item disabled">
                <span class="page-link">...</span>
            </li>
            {% endif %} {% endif %}

            <!-- 前一页 -->
            {% if pagination.current_page > 1 %}
            <li class="page-item">
                <button
                    class="page-link"
                    hx-get="/block/users/search?q={{ query }}&page={{ pagination.current_page - 1 }}&per_page={{ pagination.per_page }}"
                    hx-target="#search-results"
                    hx-indicator="#loading"
                >
                    {{ pagination.current_page - 1 }}
                </button>
            </li>
            {% endif %}

            <!-- 当前页 -->
            <li class="page-item active">
                <button class="page-link">{{ pagination.current_page }}</button>
            </li>

            <!-- 后一页 -->
            {% if pagination.current_page < pagination.total_pages %}
            <li class="page-item">
                <button
                    class="page-link"
                    hx-get="/block/users/search?q={{ query }}&page={{ pagination.current_page + 1 }}&per_page={{ pagination.per_page }}"
                    hx-target="#search-results"
                    hx-indicator="#loading"
                >
                    {{ pagination.current_page + 1 }}
                </button>
            </li>
            {% endif %}

            <!-- 末页 -->
            {% if pagination.current_page < pagination.total_pages - 1 %} {% if
            pagination.current_page < pagination.total_pages - 2 %}
            <li class="page-item disabled">
                <span class="page-link">...</span>
            </li>
            {% endif %}
            <li class="page-item">
                <button
                    class="page-link"
                    hx-get="/block/users/search?q={{ query }}&page={{ pagination.total_pages }}&per_page={{ pagination.per_page }}"
                    hx-target="#search-results"
                    hx-indicator="#loading"
                >
                    {{ pagination.total_pages }}
                </button>
            </li>
            {% endif %}

            <!-- 下一页 -->
            <li
                class="page-item {% if !pagination.has_next %}disabled{% endif %}"
            >
                <button
                    class="page-link"
                    {%
                    if
                    pagination.has_next
                    %}
                    hx-get="/block/users/search?q={{ query }}&page={{ pagination.current_page + 1 }}&per_page={{ pagination.per_page }}"
                    hx-target="#search-results"
                    hx-indicator="#loading"
                    {%
                    else
                    %}
                    disabled
                    {%
                    endif
                    %}
                >
                    下一页 <i class="bi bi-chevron-right"></i>
                </button>
            </li>
        </ul>
    </nav>

    <!-- 每页显示数量选择 -->
    <div class="text-center mt-3">
        <div class="btn-group" role="group" aria-label="每页显示数量">
            <span class="me-2 align-self-center text-muted">每页显示：</span>
            <button
                type="button"
                class="btn btn-sm {% if pagination.per_page == 12 %}btn-primary{% else %}btn-outline-secondary{% endif %}"
                hx-get="/block/users/search?q={{ query }}&page=1&per_page=12"
                hx-target="#search-results"
                hx-indicator="#loading"
            >
                12
            </button>
            <button
                type="button"
                class="btn btn-sm {% if pagination.per_page == 24 %}btn-primary{% else %}btn-outline-secondary{% endif %}"
                hx-get="/block/users/search?q={{ query }}&page=1&per_page=24"
                hx-target="#search-results"
                hx-indicator="#loading"
            >
                24
            </button>
            <button
                type="button"
                class="btn btn-sm {% if pagination.per_page == 48 %}btn-primary{% else %}btn-outline-secondary{% endif %}"
                hx-get="/block/users/search?q={{ query }}&page=1&per_page=48"
                hx-target="#search-results"
                hx-indicator="#loading"
            >
                48
            </button>
        </div>
    </div>
    {% endif %}
</div>
